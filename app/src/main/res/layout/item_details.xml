<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--  Header  Starts-->
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:theme="@style/toolbarTheme"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </LinearLayout>
    <!--  Header Ends -->


    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:theme="@style/toolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/image_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/image_view" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/title_place"
                android:layout_below="@+id/image_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7">

                <TextView
                    android:textColor="@color/roseRed"
                    android:layout_weight="4"
                    android:id="@+id/title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="article title"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/space_between"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="2"
                    android:text="date"
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/title_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_text_view"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@id/title_place"
                android:layout_below="@+id/image_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7">

                <TextView
                    android:textColor="@color/darkerBlue"
                    android:text="\@username"
                    android:layout_weight="4"
                    android:id="@+id/username_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>

                <Button
                    android:textColor="@color/White"
                    android:background="@color/roseRed"
                    android:minWidth="35dp"
                    android:maxHeight="25dp"
                    android:text="@string/default_currency"
                    android:layout_weight="1"
                    android:id="@+id/currency"
                    android:layout_width="15dp"
                    android:layout_height="30dp" />

                <TextView
                    android:paddingLeft="5dp"
                    android:textColor="@color/darkerBlue"
                    android:layout_weight="2"
                    android:text="price"
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
