<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ViewSellBuyProductDetailsFragment">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:theme="@style/toolbarTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/image_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/image_view" />

                </LinearLayout>

                <LinearLayout
                    android:id="@id/title_place"
                    android:layout_below="@+id/image_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7">

                    <TextView
                        android:textColor="@color/roseRed"
                        android:layout_weight="5"
                        android:id="@+id/title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="article title"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/space_between"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:textColor="@color/White"
                        android:background="@color/roseRed"
                        android:minWidth="35dp"
                        android:maxHeight="25dp"
                        android:layout_weight="1"
                        android:text="type"
                        android:id="@+id/button_type"
                        android:layout_width="15dp"
                        android:layout_height="30dp"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/date_place"
                    android:paddingTop="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/title_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8">

                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/darkerBlue"
                        android:text="Start date"
                        android:layout_weight="4"
                        android:id="@+id/starting_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"/>


                    <TextView
                        android:textAlignment="center"
                        android:paddingLeft="4dp"
                        android:textColor="@color/darkerBlue"
                        android:layout_weight="2"
                        android:text="End Date"
                        android:id="@+id/end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_below="@+id/date_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_text_view"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>

                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@id/title_place"
                    android:layout_below="@+id/image_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7">

                    <TextView
                        android:textColor="@color/darkerBlue"
                        android:text="\@username"
                        android:layout_weight="4"
                        android:id="@+id/username_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"/>

                    <Button
                        android:textColor="@color/White"
                        android:background="@color/roseRed"
                        android:minWidth="35dp"
                        android:maxHeight="25dp"
                        android:text="@string/default_currency"
                        android:layout_weight="1"
                        android:id="@+id/currency"
                        android:layout_width="15dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:paddingLeft="5dp"
                        android:textColor="@color/darkerBlue"
                        android:layout_weight="2"
                        android:text="price"
                        android:id="@+id/price_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:textColor="@color/roseRed"
                    android:text="borrow Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</FrameLayout>
